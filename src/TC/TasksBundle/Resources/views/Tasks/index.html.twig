{% extends "::base.html.twig" %}

{% block title %}TasksBundle:Tasks:index{% endblock %}

{% block stylesheets %}
<link href="{{ asset('/bundles/tasks/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
<style type="text/css">
    ul li { list-style: none; }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <section class="col col-lg-8">
        <h1>Welcome to the Tasks:index page</h1>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>    
    </section>
</div>
{% endblock %}
